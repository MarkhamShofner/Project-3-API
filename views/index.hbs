<body>
  <div class="sidebar">

    {{#if currentUser}}<p><a href="/logout">Log Out</a></p>
    {{else}}
    <p><a href="/signup">Sign Up</a> / <a href="/login">Log In</a></p>
    <p><button id="modal">Modal log in</button></p>
    {{/if}}
    <form class="search">
      <input class="searchLatitude" type="text" name ="latitude" placeholder="Latitude">
      <input class="searchLongitude" type="text" name ="longitude" placeholder="Longitude">
